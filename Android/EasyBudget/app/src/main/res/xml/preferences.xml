<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/setting_category_general_title">

        <Preference
            app:key="@string/setting_category_currency_change_button_key"
            app:summary="@string/setting_category_currency_change_button_message"/>

        <Preference
            app:key="@string/setting_category_limit_set_button_key"
            app:title="@string/setting_category_limit_set_button_title"
            app:summary="@string/setting_category_limit_set_button_message" />

        <SwitchPreferenceCompat
            app:key="@string/setting_category_start_day_of_week_key"
            app:title="@string/setting_category_start_day_of_week_title"
            app:summaryOff="@string/setting_category_start_day_of_week_monday"
            app:summaryOn="@string/setting_category_start_day_of_week_sunday"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/setting_category_premium_key"
        app:title="@string/setting_category_premium_title">

        <Preference
            app:key="@string/setting_category_premium_status_key"
            app:title="@string/setting_category_premium_status_title"
            app:summary="@string/setting_category_premium_status_message" />

        <ListPreference
            app:key="@string/setting_category_app_theme_key"
            app:title="@string/setting_category_theme_title"
            app:entries="@array/themes"
            app:entryValues="@array/themesData" />

        <CheckBoxPreference
            app:title="@string/setting_category_show_checked_balance_title"
            app:summaryOn="@string/setting_category_show_checked_balance_message"
            app:summaryOff="@string/setting_category_show_checked_balance_message"
            app:key="@string/setting_category_show_checked_balance_key" />

        <Preference
            app:key="@string/setting_category_backup"
            app:title="@string/backup_settings_activity_title" />

        <CheckBoxPreference
            app:title="@string/setting_category_notifications_daily_title"
            app:summaryOn="@string/setting_category_notifications_daily_message"
            app:summaryOff="@string/setting_category_notifications_daily_message"
            app:key="@string/setting_category_notifications_daily_key"
            app:enabled="true"/>

        <CheckBoxPreference
            app:title="@string/setting_category_notifications_monthly_title"
            app:summaryOn="@string/setting_category_notifications_monthly_message"
            app:summaryOff="@string/setting_category_notifications_monthly_message"
            app:key="@string/setting_category_notifications_monthly_key"
            app:enabled="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/setting_category_not_premium_key"
        app:title="@string/setting_category_not_premium_title">

        <Preference
            app:key="@string/setting_category_not_premium_status_key"
            app:title="@string/setting_category_not_premium_status_title"
            app:summary="@string/setting_category_not_premium_status_message" />

        <Preference
            app:key="@string/setting_category_premium_redeem_key"
            app:title="@string/setting_category_premium_redeem_title"
            app:summary="@string/setting_category_premium_redeem_message" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/setting_category_app_title">

        <Preference
            app:title="@string/setting_category_rate_button_title"
            app:summary="@string/setting_category_rate_button_message"
            app:key="@string/setting_category_rate_button_key" />

        <Preference
            app:title="@string/setting_category_share_app_title"
            app:summary="@string/setting_category_share_app_message"
            app:key="@string/setting_category_share_app_key" />

        <CheckBoxPreference
            app:title="@string/setting_category_notifications_update_title"
            app:summaryOn="@string/setting_category_notifications_update_message"
            app:summaryOff="@string/setting_category_notifications_update_message"
            app:key="@string/setting_category_notifications_update_key"
            app:enabled="true"/>

        <Preference
            app:title="@string/setting_category_bug_report_send_button_title"
            app:key="@string/setting_category_bug_report_send_button_key" />

        <Preference
            app:key="@string/setting_category_app_version_key"
            app:summary="@string/setting_category_app_version_message"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/setting_category_dev_title"
        app:key="@string/setting_category_dev_key">

        <Preference
            app:title="@string/setting_category_show_welcome_screen_button_title"
            app:key="@string/setting_category_show_welcome_screen_button_key" />

        <Preference
            app:title="@string/setting_category_show_premium"
            app:key="@string/setting_category_dev_show_premium_key" />

        <Preference
            app:title="@string/setting_category_show_login"
            app:key="@string/setting_category_dev_show_login" />

        <Preference
            app:title="@string/setting_category_show_create_account"
            app:key="@string/setting_category_dev_show_create_account" />

    </PreferenceCategory>

</PreferenceScreen>