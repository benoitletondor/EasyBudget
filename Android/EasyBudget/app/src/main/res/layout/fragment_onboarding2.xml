<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.welcome.Onboarding2Fragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboarding_screen2_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:theme="@style/Theme.MaterialComponents.NoActionBar"
        android:layout_marginTop="-65dp"
        android:textAllCaps="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        style="@style/GreenButton"
        app:backgroundTint="@color/easy_budget_green"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/onboarding_screen2_next_button"
        android:paddingBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:text="@string/onboarding_screen_2_title"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="@string/onboarding_screen_2_message"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal" />

        <FrameLayout android:id="@+id/expense_select_container"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</RelativeLayout>
