<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.benoitletondor.easybudget.view.AddExpenseActivity"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <LinearLayout android:id="@+id/payment_button_view"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/recycler_cell_background_drawable">

                    <ImageView android:id="@+id/payment_checkbox_imageview"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_radio_button_on"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/budget_red"
                        android:text="Payment"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout android:id="@+id/revenue_button_view"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/recycler_cell_background_drawable">

                    <ImageView android:id="@+id/revenue_checkbox_imageview"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_radio_button_off"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/budget_green"
                        android:text="Income"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="25dp" >

                <TextView android:id="@+id/description_descriptor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/secondary_text"
                    android:textSize="14dp"
                    android:layout_marginBottom="5dp" />

                <com.benoitletondor.easybudget.helper.PaddingEditText
                    android:id="@+id/description_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:background="@drawable/add_expense_edittext_drawable"
                    android:paddingBottom="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp" >

                    <TextView android:id="@+id/amount_descriptor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount ( â‚¬ )"
                        android:textColor="@color/secondary_text"
                        android:textSize="14dp"
                        android:layout_marginBottom="5dp" />

                    <com.benoitletondor.easybudget.helper.PaddingEditText
                        android:id="@+id/amount_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="16dp"
                        android:inputType="number"
                        android:background="@drawable/add_expense_edittext_drawable"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/secondary_text"
                        android:textSize="14dp"
                        android:layout_marginBottom="5dp" />

                    <com.benoitletondor.easybudget.helper.PaddingEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="16dp"
                        android:inputType="none"
                        android:background="@drawable/add_expense_edittext_drawable"
                        android:paddingBottom="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
